{
  "extends": "nx/presets/npm.json",
  "npmScope": "vtmn",
  "implicitDependencies": {
    "workspace.json": "*",
    "package.json": {
      "dependencies": "*",
      "devDependencies": "*"
    },
    "nx.json": "*"
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": [
          "build-storybook",
          "build-storybook:docs",
          "prebuild",
          "build",
          "build:json",
          "build:sprite",
          "build:svg",
          "build:base10",
          "build:base16",
          "build:components:base10",
          "build:components:base16",
          "build:unreset:base10",
          "build:unreset:base16",
          "build:css",
          "build:less",
          "build:scss",
          "build:font",
          "lint",
          "lint:fix",
          "test",
          "test:watch",
          "package",
          "prepare"
        ]
      }
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"]
    }
  },
  "targetDependencies": {
    "build": [
      {
        "target": "build",
        "projects": "dependencies"
      }
    ],
    "prepare": [
      {
        "target": "prepare",
        "projects": "dependencies"
      }
    ],
    "package": [
      {
        "target": "package",
        "projects": "dependencies"
      }
    ]
  },
  "workspaceLayout": {
    "libsDir": "packages",
    "appsDir": "packages"
  },
  "affected": {
    "defaultBase": "main"
  }
}
